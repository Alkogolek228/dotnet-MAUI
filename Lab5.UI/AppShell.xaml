<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Lab5.UI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Lab5.UI"
    xmlns:pages="clr-namespace:Lab5.UI.Pages"
    xmlns:core="clr-namespace:Brushtail.FontAwesome.Core;assembly=Brushtail.FontAwesome.Core"
    Shell.ForegroundColor="Blue">

    <ShellContent
        Title="Home"
        FlyoutIcon="{x:Static core:FontAwesome.House}"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
       Title="Singers list"
       FlyoutIcon="{x:Static core:FontAwesome.House}"
       ContentTemplate="{DataTemplate pages:SingersPage}"
       Route="SingersPage" />

</Shell>
